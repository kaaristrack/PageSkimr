<%= simple_form_for @book, html: { multipart: :true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), prompt: "Category") %>
  <%= f.file_field :book_img %>
  <%= f.input :title, label: "Book Title" %>
  <%= f.input :author %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>
