<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
  </div>
  <div class="col-md-8">
    <h2><%= @book.title %></h2>
    <h3><%= @book.author %></h3>
    <h4>Average Rating</h4>
    <div class="average-review-rating" data-score=<%= @average_review %>></div>
    <span>Based on <%= @book.reviews.count %> reviews!</span>
    <p><%= @book.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= render @book.reviews %>
    <%= link_to "Add Review", new_book_review_path(@book) %>
  </div>
</div>

<%= link_to "Back", books_path %>

<% if user_signed_in? %>
  <% if @book.user_id == current_user.id %>
    <%= link_to "Edit", edit_book_path(@book) %> |
    <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Delete this book?" } %> |
  <% end %>
<% end %>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('date-score');
    },
    path: '/assets/'
  });
</script>

<script>
  $('.average-review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('date-score');
    },
    path: '/assets/'
  });
</script>
